{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-pipe-practice"
		},
		"AzureDataLakeStorage1_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorage1'"
		},
		"onprem_to_cloud_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'onprem_to_cloud'"
		},
		"AzureDataLakeStorage1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://pizzaproject.dfs.core.windows.net/"
		},
		"onprem_to_cloud_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "localhost"
		},
		"onprem_to_cloud_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "pizzahut"
		},
		"onprem_to_cloud_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "root"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-pipe-practice_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureDataLakeStorage1_accountKey": {
						"value": "[parameters('AzureDataLakeStorage1_accountKey')]"
					},
					"onprem_to_cloud_password": {
						"value": "[parameters('onprem_to_cloud_password')]"
					},
					"AzureDataLakeStorage1_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage1_properties_typeProperties_url')]"
					},
					"onprem_to_cloud_properties_typeProperties_server": {
						"value": "[parameters('onprem_to_cloud_properties_typeProperties_server')]"
					},
					"onprem_to_cloud_properties_typeProperties_database": {
						"value": "[parameters('onprem_to_cloud_properties_typeProperties_database')]"
					},
					"onprem_to_cloud_properties_typeProperties_username": {
						"value": "[parameters('onprem_to_cloud_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}